<h1>Dashboard</h1>
<hr>
<div class="row"> 
    <% if !@employees_today.empty? %>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-calendar-day"></i> Expected Employees Today
                </h5>
                <%= link_to 'Mark All Present', attendances_today_path, class: 'btn btn-outline-primary btn-block' %>
                <br class="d-sm-none d-md-block">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Shift</td>
                                <td colspan="3"></td>
                            </tr>
                        </thead>
                        <tbody>
                            <% @employees_today.each do |employee| %>
                            <tr>
                                <td><%= employee %></td>
                                <td><%= employee.shift %></td>
                                <% if employee.attendance_today.empty? %>
                                    <td><%= link_to 'Present', present_employee_path(employee), method: :post, class: 'btn btn-outline-primary'%></td>
                                    <td><%= link_to 'Absent', absent_employee_path(employee), method: :post, class: 'btn btn-outline-danger' %></td>
                                    <td><%= link_to 'On Leave', new_attendance_path, class: 'btn btn-outline-secondary' %></td>
                                <% else %>
                                    <td colspan="3"></td>
                                <% end %>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-calendar-day"></i> Upcoming Holidays &nbsp;
                </h5>
                <br class="d-sm-none d-md-block">
                <div class="responsive-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Date</td>
                                <td>Holiday Type</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% @holidays.each do |holiday| %>
                            <tr>
                                <td><%= holiday %></td>
                                <td><%= holiday.date.strftime("%b %d %Y") %></td>
                                <td><%= holiday.kind %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
